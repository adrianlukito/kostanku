<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/kostImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_user"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/kostImageView"
        android:padding="5dp">

        <TextView
            android:id="@+id/tvKostName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kost Loving Hut"
            android:textColor="@color/colorBlack"
            android:textSize="14dp"
            />
        <TextView
            android:id="@+id/tvKostAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvKostName"
            android:text="Jl. K.H. Syahdan, Gang Keluarga"
            android:textColor="@color/colorBlack"
            android:textSize="10dp" />
        <TextView
            android:id="@+id/tvKostGenderType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvKostAddress"
            android:text="Man and Worman"
            android:textColor="#fff"
            android:textSize="12dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_radius_color_primary"
            />
        <TextView
            android:id="@+id/tvKostPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvKostGenderType"
            android:text="Rp. 2.3jt/month"
            android:textSize="15dp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvKostPrice"
            android:paddingLeft="0dp"
            android:paddingTop="5dp"
            android:paddingBottom="0dp">
            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/ic_review_filled"
                android:layout_margin="3dp"/>
            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/ic_review_filled"
                android:layout_margin="3dp"/>
            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/ic_review_filled"
                android:layout_margin="3dp"/>
            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/ic_review_filled"
                android:layout_margin="3dp"/>
            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/ic_review_filled"
                android:layout_margin="3dp"/>
        </LinearLayout>

        <!--<RatingBar-->
            <!--android:id="@+id/ratingBar"-->
            <!--style="@style/CustomRatingbar"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/tvKostPrice"-->
            <!--android:numStars="5"-->
            <!--/>-->

    </RelativeLayout>
</RelativeLayout>